            }
        },
        {
            "name": "windows",
            "displayName": "Configuration to build Release version on Windows using Ninja",
            "inherits": [
                "Windows Release",
                "Ninja"
            ],
            "hidden": true
        },
        {
            "name": "windows-2D",
            "displayName": "Configuration to build Release version on Windows using Ninja",
