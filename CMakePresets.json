            "inherits": [
                "linux-debug",
                "3D-World"
            ],
            "cacheVariables": {
                "CHECK_MEMORY_LEAKS": true
            }
        },
        {
            "name": "linux-cpuProfiler",
            "displayName": "Configuration to generate CPU profiler of the project on Linux",
            "inherits": [
                "Linux Debug",
                "Ninja"
            ],
            "hidden": true,
            "cacheVariables": {
                "USE_CPU_PROFILER": true
            }
        },
        {
            "name": "linux-cpuProfiler-2D",
            "displayName": "Configuration to generate CPU profiler of the project on Linux",
            "inherits": [
                "linux-cpuProfiler",
                "2D-World"
            ],
            "cacheVariables": {
                "USE_CPU_PROFILER": true
            }
        },
        {
            "name": "linux-cpuProfiler-3D",
