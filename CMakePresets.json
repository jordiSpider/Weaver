{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": 
    [
        {
            "name": "base",
            "hidden": true,
            "displayName": "Base configuration",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON"
            },
            "environment": {
                "BUILD_FOLDER": "cmake-build"
            }
        },
        {
            "name": "build-doc",
            "inherits": [
                "base"
            ],
            "hidden": false,
            "displayName": "Configuration to generate documentation",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "cacheVariables": {
                "BUILD_SPHINX_DOC": "ON",
                "BUILD_DOC_VERBOSE": "ON"
            }
        },
        {
            "name": "build-sphinx-conf",
            "inherits": [
                "base"
            ],
            "hidden": false,
            "displayName": "Configuration to generate documentation",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "cacheVariables": {
                "BUILD_SPHINX_CONF": "ON"
            }
        },
        {
            "name": "update-sphinx-locale",
            "inherits": [
                "base"
            ],
            "hidden": false,
            "displayName": "Configuration to generate documentation",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "cacheVariables": {
                "UPDATE_SPHINX_LOCALE": "ON"
            }
        },
        {
            "name": "build-doxygen-conf",
            "inherits": [
                "base"
            ],
            "hidden": false,
            "displayName": "Configuration to generate documentation",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "cacheVariables": {
                "BUILD_DOXYGEN_CONF": "ON"
            }
        },
        {
            "name": "build-doxygen-doc",
            "inherits": [
                "base"
            ],
            "hidden": false,
            "displayName": "Configuration to generate documentation",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "cacheVariables": {
                "BUILD_DOXYGEN_DOC": "ON"
            }
        },
        {
            "name": "clean-doc",
            "inherits": [
                "base"
            ],
            "hidden": false,
            "displayName": "Configuration to clean documentation",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "cacheVariables": {
                "CLEAN_DOC": "ON"
            }
        },
        {
            "name": "Ninja",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration to generate with Ninja",
            "generator": "Ninja",
            "cacheVariables": {
                "PRESET_NAME": "${presetName}",
                "BUILD_EXE": "ON",
                "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON"
            }
        },
        {
            "name": "Release",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration to build Release version",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "2D-World",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration to 2D-World",
            "cacheVariables": {
                "DIMENSIONS": "2"
            }
        },
        {
            "name": "3D-World",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration to 3D-World",
            "cacheVariables": {
                "DIMENSIONS": "3"
            }
        },
        {
            "name": "Debug",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration to build Debug version",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_DEBUG_POSTFIX": "_d"
            }
        },
        {
            "name": "Linux",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration for building on Linux",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_EXECUTABLE_SUFFIX_CXX": ".out",
                "CMAKE_SHARED_LIBRARY_SUFFIX_CXX": ".so",
                "VCPKG_TARGET_TRIPLET": "x64-linux",
                "VCPKG_HOST_TRIPLET": "x64-linux"
            }
        },
        {
            "name": "Windows",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration for building on Windows",
            "binaryDir": "${sourceDir}\\$env{BUILD_FOLDER}\\${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_EXECUTABLE_SUFFIX_CXX": ".exe",
                "CMAKE_SHARED_LIBRARY_SUFFIX_CXX": ".dll",
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
                "VCPKG_HOST_TRIPLET": "x64-mingw-static",
                "CMAKE_PREFIX_PATH": "$env{MSYS2_ROOT}/mingw64",
                "CMAKE_MAKE_PROGRAM": "$env{MSYS2_ROOT}/mingw64/bin/mingw32-make.exe"
            }
        },
        {
            "name": "Darwin",
            "inherits": [
                "base"
            ],
            "hidden": true,
            "displayName": "Configuration for building on MacOS",
            "binaryDir": "${sourceDir}/$env{BUILD_FOLDER}/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_EXECUTABLE_SUFFIX_CXX": ".out",
                "CMAKE_SHARED_LIBRARY_SUFFIX_CXX": ".so"
            }
        },
        {
            "name": "Linux Release",
            "inherits": [
                "Linux",
                "Release"
            ],
            "hidden": true,
            "displayName": "Configuration to build Release version on Linux"
        },
        {
            "name": "Linux Debug",
            "inherits": [
                "Linux",
                "Debug"
            ],
            "hidden": true,
            "displayName": "Configuration to build Debug version on Linux"
        },
        {
            "name": "Windows Release",
            "inherits": [
                "Windows",
                "Release"
            ],
            "hidden": true,
            "displayName": "Configuration to build Release version on Windows"
        },
        {
            "name": "linux",
            "displayName": "Configuration to build Release version on Linux using Ninja",
            "inherits": [
                "Linux Release",
                "Ninja"
            ],
            "hidden": true
        },
        {
            "name": "linux-2D",
            "displayName": "Configuration to build Release version on Linux using Ninja",
            "inherits": [
                "linux",
                "2D-World"
            ]
        },
        {
            "name": "linux-3D",
            "displayName": "Configuration to build Release version on Linux using Ninja",
            "inherits": [
                "linux",
                "3D-World"
            ]
        },
        {
            "name": "linux-debug",
            "displayName": "Configuration to build Debug version on Linux using Ninja",
            "inherits": [
                "Linux Debug",
                "Ninja"
            ],
            "cacheVariables": {
                "CHECK_MEMORY_LEAKS": true
            },
            "hidden": true
        },
        {
            "name": "linux-debug-2D",
            "displayName": "Configuration to build Debug version on Linux using Ninja",
            "inherits": [
                "linux-debug",
                "2D-World"
            ],
            "cacheVariables": {
                "CHECK_MEMORY_LEAKS": true
            }
        },
        {
            "name": "linux-debug-3D",
